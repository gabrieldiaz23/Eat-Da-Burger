<div class="container">
	<div class="row">
		<div class="col-xs-3"></div>
		<div class="col-xs-6 text-center" id="top-bar">
			<img src="assets/images/hamburger.png" alt="burger" />
			<div class="alert alert-info" id="edb" role="alert">Eat - da - Burger!</div>
		</div>
		<div class="col-xs-3"></div>
		<div class="col-sm-7 text-center">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
				</div>
				<div class="col-sm-3 text-center">
					<form class="devour-form button-size">
						<input  type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			
		</div>
		<div class="col-sm-5 text-center">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-sm-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Order Here!</button>
			</form>
		</div>
	</div>
	<div class="col-xs-4"></div>
	<div class="col-xs-4">
		<div class="alert alert-info" id="ins" role="alert">Create a burger you wanna eat. Then click the Order button</div>
	</div>	
	<div class="col-xs-4"></div>
</div>